<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<title>Users</title>
	<!-- Jquery -->
	<script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>
	 

	<!-- Compiled and minified CSS -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/css/materialize.min.css">

	<!-- Compiled and minified JavaScript -->
	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
	          
	<link rel="stylesheet" href="">
</head>
<body>
	<!-- Navbar goes here -->
	<div class="container">
		<h1>Bienvenidos!</h1>
	</div>
    <!-- Page Layout here -->
	<div class="row">
		
		<div class="col s6">
			<!-- Grey navigation panel -->
			<div class="container">
				<h1>La lista</h1>
		        <ul class="collection">
					<% registros.forEach(function(item){ %>
					    <li class="collection-item avatar">
							<img src="http://lorempixel.com/100/100/people" alt="" class="circle">
							<span class="title"><%= item.name %></span>
							<p><%= item.lastname %><br>
							</p>
							<a href="mailto:<%= item.email %>" class="secondary-content"><i class="material-icons"><%= item.email %></i></a>
							
							<a href="users/edit/<%= item._id %>">Editar</a>
							<a href="users/delete/<%= item._id %>">Eliminar</a>
					    </li>
					<% }) %>
				</ul>
		  	</div>
		</div>

		<div class="col s6">
			<!-- Teal page content  -->
			 <div class="row">
			    <form method="post" action="/users">
					<div class="row">
				    <div class="input-field col s6">
				      <input id="name" name="name" type="text" class="validate">
				      <label for="name">First Name</label>
				    </div>
				    <div class="input-field col s6">
				      <input id="lastname" name="lastname" type="text" class="validate">
				      <label for="lastname">Last Name</label>
				    </div>
				  </div>
				  <div class="row">
				    <div class="input-field col s12">
				      <input id="email" name="email" type="email" class="validate">
				      <label for="email">Email</label>
				    </div>
				  </div>
				  <div class="row">
				  	<div class="input-field col s12">
				  		<input type="submit" value="Crear">
				  	</div>
				  </div>
				</form>
			  </div>
      </div>

    </div>
</body>
</html>